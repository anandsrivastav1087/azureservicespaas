@{
    ViewBag.Title = "upload with SAS";
}
<script>

</script>
<h2>Uploading Files with SAS.........</h2>
@using (Html.BeginForm("uploadwithSAS", "UploadFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            File Uploading.....
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-3">Select File</div>
                <div class="col-lg-7">
                    <input id="fluploaddocument" type="file" name="file" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center alert-warning">@ViewBag.message</div>
            </div>
        </div>
        <div class="panel-footer">
            <input id="btnUpload" type="submit" value="Upload" class="btn btn-default" />
            @*@Html.ActionLink("Download", "download", "UploadFile", new { @class = "btn btn-warning", @id = "btnDownload" })*@
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            Storage File List
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>File Name</th>                            
                            <th>Action</th>                            
                        </tr>
                    </thead>
                    <tbody>                       
                      @if (Model != null)
                      {
                        foreach (var item in Model)
                        {

                            <tr>
                                <td class="col-lg-3 ">@item.Name</td>
                                <td class="col-lg-10 " @(item.Url==""?"style=display:none":"style=display:block")>
                                    <a href="@item.Url" class="btn btn-warning btn-xs">Download</a>                                    
                                    @Html.ActionLink("Delete", "deletesas", "UploadFile", new { @name = item.Name, @url = item.Url }, new { @class = "btn btn-danger btn-xs", @id = "btnDownload" })
                                    @Html.ActionLink("download sas", "downloadsas", "UploadFile", new { @name = item.Name, @url = item.SASUrl }, new { @class = "btn btn-danger btn-xs", @id = "btnDownload" })
                                </td>
                            </tr>
                        }
                      }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



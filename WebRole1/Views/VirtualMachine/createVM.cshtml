
@{
    ViewBag.Title = "Create VM";
}

<h2>Virtual Machine.........</h2>


@using (Html.BeginForm("createVM", "VirtualMachine", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Entry Form
        </div>
        <div class="panel-body ">
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-3 text-right">Storage Account</div>
                    <div class="col-lg-5">
                        <input id="txtstorageAccount" name="storageAccount" class="form-control" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-3 text-right">VM Name</div>
                    <div class="col-lg-5">
                        <input id="txtVMName" name="VMName" class="form-control" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-3 text-right">User Name</div>
                    <div class="col-lg-5">
                        <input id="txtUserName" name="UserName" class="form-control" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-3 text-right">Password</div>
                    <div class="col-lg-5">
                        <input id="txtPassword" name="Password" class="form-control" type="password" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-3 text-right">Location</div>
                    <div class="col-lg-5">
                        <input id="txtLocation" name="Location" class="form-control" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-12 text-right text-warning">@ViewBag.Message</div>                   
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input id="btnInsert" type="submit" value="Submit" class="btn btn-default" />            
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            VM List
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Name </th>                 
                    <th>Action </th>                 
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.VMName</td>
                        <td>
                            @Html.ActionLink("Restart", "RestartVM", "VirtualMachine",new { @VMName = item.VMName },new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Connect", "ConnectVM", "VirtualMachine", new { @VMName = item.VMName },new{ @class = "btn btn-default btn-xs" })
                            @Html.ActionLink("ShutDown", "stopVM", "VirtualMachine", new { @VMName = item.VMName }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            </div>
        </div>
    </div>
}